{
  "kind": "collectionType",
  "collectionName": "communities",
  "info": {
    "singularName": "community",
    "pluralName": "communities",
    "displayName": "community",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "emergency_alert",
        "evacuation_guide",
        "first_aid_guide",
        "safety_guide"
      ],
      "required": true
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ],
      "default": "medium"
    },
    "notificationChannels": {
      "type": "json",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "notifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::notification.notification",
      "mappedBy": "community"
    },
    "location": {
      "type": "string"
    },
    "isAprroved": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
